.armor-blrrtstrap .dropdown
.armor-blrrtstrap-dropdown
  background-color #fff
  border-color lighten(#ccc, 10)
  border-style solid
  border-width 1px
  color #666
  display inline-block
  font-size 1.4rem
  line-height 2.1rem
  padding 0.7rem 1rem 0.5rem
  position relative
  width 100%
  &::after
    content '\f0d7'
    font-family FontAwesome
    font-size 1.5rem
    line-height 3.5rem
    pointer-events none
    position absolute
    right 1rem
    top 0
  &.deselected
  &.deselected
    color #999

.armor-blrrtstrap .dropdown-items
.armor-blrrtstrap-dropdown-items
  display block
  width 100%

.armor-blrrtstrap .dropdown-items option
.armor-blrrtstrap-dropdown-items option
  display block
