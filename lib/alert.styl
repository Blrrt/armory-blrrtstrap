.armor-blrrtstrap .alert-container
  display block
  overflow hidden

.armor-blrrtstrap .alert-container--pinned
  left 0
  position absolute
  right 0
  z-index 10

.armor-blrrtstrap .alert
  background-color rgba(#000, 0.8)
  display flex
  left 0
  padding 0.25rem 1rem
  right 0
  transition opacity 0.2s, transform 0.2s
  z-index 20

.armor-blrrtstrap .alert--hide
  transform translateY(-100%)

.armor-blrrtstrap .alert__text
  color #fff
  display flex
  flex 1
  font-size 1.4rem
  line-height 2rem

.armor-blrrtstrap .alert__text--align--right
  justify-content flex-end

.armor-blrrtstrap .alert__link
  cursor pointer
  display inline

.armor-blrrtstrap .alert__link--disabled
  color #666
