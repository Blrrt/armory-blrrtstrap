.armor-blrrtstrap .select
  background-color #fff
  border-color lighten(#ccc, 10)
  border-style solid
  border-width 1px
  color #999
  display inline-block
  font-size 1.4rem
  line-height 2.1rem
  padding 0.7rem 1rem 0.5rem
  position relative
  width 100%

.armor-blrrtstrap .select--active
  color #666

.armor-blrrtstrap .select__caret
  font-size 1.5rem
  line-height 3.5rem
  pointer-events none
  position absolute
  right 1rem
  top 0

.armor-blrrtstrap .select__items
  display block
  width 100%

.armor-blrrtstrap .select-items option
  display block
