.armor-blrrtstrap .input-box
  background-color #fff
  border .1rem solid #e5e5e5
  display block
  padding .9rem
  position relative
  z-index 10

.armor-blrrtstrap .input-box--status--error
  border-color #f1cbc4

.armor-blrrtstrap .input-box--status--success
  border-color #c4e5ce

.armor-blrrtstrap .input-box__label
  color darken(#ccc, 15)
  cursor pointer
  display block
  font-size 1.4rem
  line-height 2rem
