.armor-blrrtstrap .modal-container--open
  height 100vh
  overflow-y hidden

.armor-blrrtstrap .modal
  justify-content center
  align-items flex-start
  display flex
  height 100vh
  left 0
  overflow-y auto
  position fixed
  right 0
  top 0
  z-index 2000
  @media (min-width: 32em)
    padding-bottom 10rem

.armor-blrrtstrap .modal--hide
  overflow-y hidden
  pointer-events none

.armor-blrrtstrap .modal__background
  background-color darken(#333, 15)
  display block
  opacity 0.9
  pointer-events auto
  visibility hidden
  bottom 0
  left 0
  position fixed
  right 0
  top 0

.armor-blrrtstrap .modal--show .modal__background
  visibility visible

.armor-blrrtstrap .modal__window
  background-color #fff
  display flex
  flex-direction column
  padding 3rem 1.5rem
  pointer-events auto
  position relative
  transform translateY(-100%)
  transition transform 0.2s
  width 100%
  @media (max-width: 32em)
    min-height 100%
  @media (min-width: 32em)
    max-width 45rem

.armor-blrrtstrap .modal--show .modal__window
  transform translateY(0)
  @media (min-width: 32em)
    transform translateY(5rem)

.armor-blrrtstrap .modal__window__close
  color #666
  cursor pointer
  display block
  font-size 2.5rem
  line-height 4rem
  position absolute
  right 0
  text-align center
  top 0
  transition color 0.2s
  width @line-height
  &:hover
    color #333

.armor-blrrtstrap .modal__window__body
  display block
  padding-left 1.5rem
  padding-right 1.5rem

.armor-blrrtstrap .modal__window__body--under--ios-status-bar
  padding-top 2rem

.armor-blrrtstrap .modal__window__close--under--ios-status-bar
  top 2rem
