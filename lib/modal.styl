.armor-blrrtstrap .modal
.armor-blrrtstrap-modal
  background-color rgba(darken(#333, 15), .9)
  justify-content center
  align-items center
  display flex
  height 100%
  left 0
  opacity 0
  position fixed
  top 0
  transition all .2s
  width 100%
  z-index -1
  &.show
    opacity 1
    z-index 1000

.armor-blrrtstrap .modal-window
.armor-blrrtstrap-modal-window
  background-color #fff
  bottom 0
  display block
  left 0
  padding 2rem
  position absolute
  right 0
  transition all .2s
  top 0
  @media (min-width: 32em)
    padding 3rem
    position relative
    transform translateY(-100%)
    width 45rem

.armor-blrrtstrap .modal.show .modal-window
.armor-blrrtstrap-modal.show .armor-blrrtstrap-modal-window
  transform translateY(0)

.armor-blrrtstrap .modal-window-close
.armor-blrrtstrap-modal-window-close
  color #666
  cursor pointer
  display block
  font-size 2.5rem
  line-height 4rem
  position absolute
  right 0
  text-align center
  top 0
  transition all .2s
  width @line-height
  &:hover
    color #333
