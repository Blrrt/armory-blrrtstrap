.armor-blrrtstrap .modal-container--open
  height 100vh
  overflow-y hidden

.armor-blrrtstrap .modal
  align-items center
  bottom 0
  display flex
  flex-direction column
  left 0
  pointer-events none
  position fixed
  right 0
  top 0
  z-index 2000

.armor-blrrtstrap .modal__background
  background-color darken(#333, 15)
  bottom 0
  display block
  left 0
  opacity 0
  position fixed
  right 0
  top 0
  transition opacity 0.2s
  will-change opacity

.armor-blrrtstrap .modal__background--show
  opacity 0.9
  pointer-events auto

.armor-blrrtstrap .modal__window
  display block
  opacity 0
  transform translateY(-100%)
  transition opacity 0.2s, transform 0.2s
  will-change opacity, transform

.armor-blrrtstrap .modal__window::before
  background-color #fff
  bottom 0
  content ''
  display block
  left 0
  position absolute
  right 0
  top 0

.armor-blrrtstrap .modal__window--under--ios-status-bar
  margin-top 2rem
  &::before
    top -2rem

.armor-blrrtstrap .modal__window--show
  opacity 1
  pointer-events auto
  transform translateY(0)

.armor-blrrtstrap .modal__window__button
  position absolute
  right 0
  top 0

.armor-blrrtstrap .modal__window__body
  display block
  margin-top 4rem
  padding-bottom 3rem
  padding-left 2rem
  padding-right 2rem
  overflow auto
  -webkit-overflow-scrolling touch

@media (min-width: 28.125em) and (max-width: 48em)
  .armor-blrrtstrap .modal__window__body
    padding-left calc(50vw - 22.5rem + 2rem)
    padding-right calc(50vw - 22.5rem + 2rem)

@media (max-width: 48em)
  .armor-blrrtstrap .modal__window
  .armor-blrrtstrap .modal__window__body
    bottom 0
    left 0
    position absolute
    right 0
    top 0

@media (min-width: 48em)
  .armor-blrrtstrap .modal
    padding-bottom 10rem

  .armor-blrrtstrap .modal__window
    position relative

  .armor-blrrtstrap .modal__window--show
    transform translateY(5rem)

  .armor-blrrtstrap .modal__window__body
    max-height 80vh
    min-width 45rem
    position relative
