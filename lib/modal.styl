.modal-behind
  overflow hidden

.modal
  background-color rgba(darken(#333, 15), .9)
  justify-content center
  align-items flex-start
  clip rect(0, 0, 0, 0)
  display flex
  height 100%
  left 0
  opacity 0
  overflow auto
  position fixed
  top 0
  width 100%
  z-index 2000

.modal--show
  clip auto
  opacity 1

.modal__window
  background-color #fff
  display flex
  flex-direction column
  padding 3rem 1.5rem
  position relative
  transition transform 0.2s
  width 100%
  @media (max-width: 32em)
    min-height 100%
  @media (min-width: 32em)
    max-width 45rem
    transform translateY(-100%)

.modal--show .modal__window
  @media (min-width: 32em)
    transform translateY(5rem)

.modal__window__close
  color #666
  cursor pointer
  display block
  font-size 2.5rem
  line-height 4rem
  position absolute
  right 0
  text-align center
  top 0
  transition color 0.2s
  width @line-height
  &:hover
    color #333

.modal__window__body
  display block
  padding-left 1.5rem
  padding-right 1.5rem
