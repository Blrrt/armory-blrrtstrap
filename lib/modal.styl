.armor-blrrtstrap .modal
.armor-blrrtstrap-modal
  background-color rgba(darken(#333, 15), .9)
  justify-content center
  align-items center
  display flex
  height 100%
  left 0
  opacity 0
  position fixed
  top 0
  transition all .2s
  width 100%
  z-index -1
  &.show
    opacity 1
    z-index 1000

.armor-blrrtstrap .modal-window
.armor-blrrtstrap-modal-window
  background-color #fff
  display flex
  flex-direction column
  height 100%
  padding 3rem 1.5rem
  position relative
  transition all .2s
  width 100%
  @media (min-width: 32em)
    max-height 50%
    max-width 45rem
    transform translateY(-100%)

.armor-blrrtstrap .modal.show .modal-window
.armor-blrrtstrap-modal.show .armor-blrrtstrap-modal-window
  transform translateY(0)

.armor-blrrtstrap .modal-window-close
.armor-blrrtstrap-modal-window-close
  color #666
  cursor pointer
  display block
  font-size 2.5rem
  line-height 4rem
  position absolute
  right 0
  text-align center
  top 0
  transition all .2s
  width @line-height
  &:hover
    color #333

.armor-blrrtstrap .modal-window-body
.armor-blrrtstrap-modal-window-body
  display block
  overflow auto
  padding-left 1.5rem
  padding-right 1.5rem
