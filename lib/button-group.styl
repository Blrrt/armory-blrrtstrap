.armor-blrrtstrap .button-group
.armor-blrrtstrap-button-group
  display table
  position relative
  table-layout fixed

.armor-blrrtstrap .button-group-item
.armor-blrrtstrap-button-group-item
  display table-cell
  &:last-of-type .button-group-button
    text-align right
  &:first-of-type .button-group-button
    text-align left

.armor-blrrtstrap .button-group-button
.armor-blrrtstrap-button-group-button
  background-color rgba(#000, .65)
  color #fff
  cursor pointer
  display inline-block
  font-size 13px
  line-height 32px
  min-width @line-height
  padding-left 8px
  padding-right @padding-left
  text-align center
  transition all .2s
  width 100%
  &::last-of-type
    text-align right
  &::first-of-type
    text-align left
  &:hover
    background-color rgba(#000, .8)
  &:disabled
  &.disabled
    color rgba(#fff, .5)
    cursor default
    &:hover
      background-color rgba(#000, .65)

.armor-blrrtstrap .button-group-item-expand
.armor-blrrtstrap-button-group-item-expand
  width 100%

.armor-blrrtstrap .button-group-item-shrink
.armor-blrrtstrap-button-group-item-shrink
  width 1%
  white-space nowrap
  &:first-of-type .button-group-button
  &:last-of-type .button-group-button
    text-align center

for size, i in (x-small 1) (small 1.5) (medium 2) (large 3) (x-large 4)
  .armor-blrrtstrap .button-group-size-{size[0]} .button-group-item .button-group-button
  .armor-blrrtstrap-button-group-size-{size[0]}-item .armor-blrrtstrap-button-group-button
    font-size (11 + i) px
    line-height size[1] * 16px
    min-width @line-height
    padding-left size[1] * 4px
    padding-right @padding-left
