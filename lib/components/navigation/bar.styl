.navigation-bar-items
  list-style none
  margin 0
  padding 0

.navigation-bar-item
  border 1px solid #e5e5e5
  border-bottom-style none

.navigation-bar-item:last-child
  border-bottom-style solid

.navigation-bar-item-active
  border-style none

.navigation-bar-target
  color $link-color
  display block
  font-size $font-size-medium
  padding .75em .9em
  text-decoration none

.navigation-bar-target:hover
  background #f5f5f5
  color #08c

.navigation-bar-item-active > .navigation-bar-target,
.navigation-bar-target-active
  background darken($link-color, 20)
  color #fff