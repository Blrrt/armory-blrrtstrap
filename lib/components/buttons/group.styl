.button-group-items
  list-style none
  margin 0
  padding 0

.button-group-items
  clear both
  content ''
  display table
  margin-left 1px

.button-group-item
  float left
  margin-left -1px

.button-group-item:first-childnot(:last-child) > .button
  border-bottom-right-radius 0
  border-top-right-radius 0

.button-group-item:last-childnot(:first-child) > .button
  border-bottom-left-radius 0
  border-top-left-radius 0