html
  color transparent
  cursor default
  font-family 'sans-serif'
  font-style normal
  font-weight normal
  text-size-adjust 100%

*
  -webkit-appearance none
  background transparent
  border 0
  border-collapse collapse
  border-radius 0
  border-spacing 0
  box-sizing border-box
  color inherit
  cursor inherit
  font inherit
  font-family inherit
  font-size inherit
  font-size 100%
  font-style inherit
  font-weight inherit
  height auto
  list-style none
  margin 0
  outline 0
  padding 0
  quotes none
  resize none
  text-decoration none
  vertical-align baseline
  white-space inherit
  width auto

*::after
*::before
  content none

button
input
  &::-moz-focus-inner
    border 0
    padding 0
