.armor-blrrtstrap .reveal
  bottom 0
  display block
  left 0
  overflow hidden
  position absolute
  right 0
  top 0

.armor-blrrtstrap .reveal__background
  bottom 0
  display block
  left 0
  pointer-events none
  position fixed
  right 0
  top 0

.armor-blrrtstrap .reveal__background--open
  pointer-events auto

.armor-blrrtstrap .reveal__content
  align-items center
  background-color #222
  bottom 0
  display flex
  justify-content center
  padding 1rem
  position absolute
  right 0
  top 0
  transition transform 0.2s
  z-index 30

.armor-blrrtstrap .reveal__content--direction--right
  left 15%
  transform translateX(100%)

.armor-blrrtstrap .reveal__content--open
  transform none
