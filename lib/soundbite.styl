@import 'clearfix'

.armor-blrrtstrap .soundbites
  display inline-block
  position relative

.armor-blrrtstrap .soundbites__lines
  clearfix()
  cursor pointer
  display block

.armor-blrrtstrap .soundbites__lines__line
  display block
  float left
  margin-bottom 0.5rem
  margin-right 0.8rem
  vertical-align top

.armor-blrrtstrap .soundbites__lines__line--break
  clear left

.armor-blrrtstrap .soundbites__lines__line__text
  color #fff
  display block
  font-size 3.8rem
  line-height 4rem
  opacity 0.5
  transition all 0.2s
  @media (max-width: 48em)
    font-size 2.2rem
    line-height 2.5rem

.armor-blrrtstrap .soundbites__lines__line__sound
  display block
  opacity 0
  transition all 0.2s

.armor-blrrtstrap .soundbites__lines__line--active
  .soundbites__lines__line__text
  .soundbites__lines__line__sound
    opacity 1
