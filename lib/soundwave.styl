.armor-blrrtstrap .soundwave
  align-items center
  display flex
  width 100%

.armor-blrrtstrap .soundwave__track
  appearance none
  background-color #eee
  background-origin content-box
  display inline-block
  flex-basis 0%
  flex-grow 1
  flex-shrink 1
  height 0.2rem
  margin-bottom 0.4rem
  margin-top 0.4rem

.armor-blrrtstrap .soundwave__track--prepended
  margin-left 0.5rem

.armor-blrrtstrap .soundwave__track--appended
  margin-right 0.5rem

.armor-blrrtstrap .soundwave__track::-webkit-progress-bar
  background-color transparent

.armor-blrrtstrap .soundwave__track::-moz-progress-bar
  background-color #666

.armor-blrrtstrap .soundwave__track::-webkit-progress-value
  background-color #666

.armor-blrrtstrap .soundwave--inverted .soundwave__track
  background-color #fff

.armor-blrrtstrap .soundwave--inverted .soundwave__track::-moz-progress-bar
  background-color #c30

.armor-blrrtstrap .soundwave--inverted .soundwave__track::-webkit-progress-value
  background-color #c30

.armor-blrrtstrap .soundwave__time
  color #999
  display inline-block
  font-size 1.2rem
  line-height 1.5rem
  margin-left 0.5rem
  margin-right 0.5rem
  position relative
  text-align center
  top 0.1em
  width 4rem

.armor-blrrtstrap .soundwave--inverted .soundwave__time
  color #fff

.armor-blrrtstrap .soundwave--size--large .soundwave__track
  height 0.4rem

.armor-blrrtstrap .soundwave--size--large .soundwave__time
  font-size 1.6rem
  line-height 2rem
