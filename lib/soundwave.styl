.armor-blrrtstrap .soundwave
.armor-blrrtstrap-soundwave
  display flex

.armor-blrrtstrap .soundwave-track
.armor-blrrtstrap-soundwave-track
  appearance none
  background-origin: content-box
  cursor pointer
  display inline-block
  flex 1
  height 2rem
  padding-bottom .6rem
  padding-top .6rem

.armor-blrrtstrap .soundwave-track::-webkit-progress-bar
.armor-blrrtstrap-soundwave-track::-webkit-progress-bar
  background-color #fff

.armor-blrrtstrap .soundwave-track::-webkit-progress-value
.armor-blrrtstrap-soundwave-track::-webkit-progress-value
  background-color #c30

.armor-blrrtstrap .soundwave-time
.armor-blrrtstrap-soundwave-time
  color #fff
  display inline-block
  font-size 1.6rem
  line-height 2rem
  left 1rem
  position relative
