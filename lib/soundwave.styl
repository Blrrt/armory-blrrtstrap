.armor-blrrtstrap .soundwave
  align-items center
  display flex
  width 100%

.armor-blrrtstrap .soundwave__track
  display inline-block
  flex-basis 0%
  flex-grow 1
  flex-shrink 1
  padding-bottom 0.5rem
  padding-top 0.5rem

.armor-blrrtstrap .soundwave__track--trim
  padding-bottom 0
  padding-top 0

.armor-blrrtstrap .soundwave__track--prepended
  margin-left 0.5rem

.armor-blrrtstrap .soundwave__track--appended
  margin-right 0.5rem

.armor-blrrtstrap .soundwave__time
  color #999
  display inline-block
  font-size 1.2rem
  line-height 1.5rem
  margin-left 0.5rem
  margin-right 0.5rem
  position relative
  text-align center
  top 0.1em
  width 4rem

.armor-blrrtstrap .soundwave--inverted .soundwave__time
  color #fff
