html
body
  font-size 10px
  height 100%
  overflow-scrolling touch
  -webkit-overflow-scrolling touch
  -webkit-tap-highlight-color rgba(#000, 0)
  -webkit-touch-callout none
  user-select none
  width 100%

.armor-blrrtstrap .base
  background-color #eee
  display flex
  font-family sans-serif
  -webkit-font-smoothing antialiased
  overflow-y auto

.armor-blrrtstrap .base--status-bar--ios
  padding-top 2rem
  &::before
    background-color #eee
    content ''
    display block
    height 2rem
    left 0
    position absolute
    right 0
    top 0
    z-index 210

.armor-blrrtstrap .base.cordova--yes
  overflow hidden

.armor-blrrtstrap .base--background.base--status-bar--ios::before
  background-color #222
