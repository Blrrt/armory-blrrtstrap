.armor-blrrtstrap .grid
  display flex
  width 100%

.armor-blrrtstrap .grid--align--baseline
  align-items baseline

.armor-blrrtstrap .grid--center
  justify-content center

.armor-blrrtstrap .grid--direction--vertical
  flex-direction column
  height 100%
  width auto

.armor-blrrtstrap .grid--justify--center
  justify-content center

.armor-blrrtstrap .grid__cell
  display block

.armor-blrrtstrap .grid__cell--grow
  flex-basis 0
  flex-grow 1

.armor-blrrtstrap
  for i in 1..12
    & .grid__cell--size--{i}
      flex-basis (100 * i / 12) %
      flex-grow 0
      max-width i * 6rem
      width 100%
    for device in (tablet 48em) (desktop 62em) (widescreen 75em)
      & .grid__cell--device--{device}--size--{i}
        flex-basis auto
        max-width i * 6rem
        width 100%
        @media (min-width: device[1])
          flex-grow 0
          flex-basis (100 * i / 12) %
