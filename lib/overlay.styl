.armor-blrrtstrap .overlay
  align-items center
  background rgba(#000, 0.9)
  bottom 0
  display flex
  justify-content center
  left 0
  opacity 0
  pointer-events none
  position absolute
  right 0
  top 0
  transition opacity 0.2s
  z-index 20

.armor-blrrtstrap .overlay--show
  opacity 1
  pointer-events auto
