@keyframes placeholder-avatar
  0%
    transform translateX(0)
  100%
    transform translateX(100%)

.armor-blrrtstrap .placeholder-avatar
  background-color #eee
  border-radius 50%
  display inline-block
  overflow hidden
  position relative

.armor-blrrtstrap .placeholder-avatar::after
  animation-duration 1.2s
  animation-name placeholder-avatar
  animation-iteration-count infinite
  animation-timing-function cubic-bezier(0.4, 0, 0.2, 1)
  background-image linear-gradient(90deg, rgba(#fff, 0) 0, rgba(#fff, 0.5) 2rem, rgba(#fff, 0.5) 3rem, rgba(#fff, 0) 5rem)
  bottom 0
  content ''
  display block
  left -5rem
  position absolute
  right -5rem
  top 0

for size in (small 3) (medium 4) (large 5)
  .armor-blrrtstrap .placeholder-avatar--size--{size[0]}
    height size[1] * 1rem
    width size[1] * 1rem
