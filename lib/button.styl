.armor-blrrtstrap .button
  background-color #666
  border-color transparent
  border-style dashed
  border-width 0.2rem
  color #fff
  cursor pointer
  display inline-block
  font-size 1.6rem
  -webkit-font-smoothing antialiased
  line-height 2.5rem
  min-width 3.5rem
  padding 0.4rem 1rem 0.2rem
  position relative
  text-align center
  transition background-color 0.2s, border-color 0.2s, color 0.2s, opacity 0.2s
  z-index 1
  &:hover:not(:disabled):not(.disabled)
    background-color darken(@background-color, 50%)
  &.disabled
  &:disabled
    cursor default
    opacity 0.6

.armor-blrrtstrap .button--dropzone--dragging
.armor-blrrtstrap .button--dropzone--dragover
  border-color #fff

.armor-blrrtstrap .button--dropzone--dragover
  background-color rgba(#000, 0.8)

for size in (x-small 1.3rem 1.5rem 0.5rem) (small 1.4rem 2rem 1rem) (large 1.6rem 3.5rem 1.5rem)
  .armor-blrrtstrap .button--size--{size[0]}
    font-size size[1]
    line-height size[2]
    padding-left size[3]
    padding-right size[3]

.armor-blrrtstrap .button__icon
  display inline
  position relative
  right 0.5rem

.armor-blrrtstrap .button__text
  display inline

.armor-blrrtstrap .button__text--muted
  color rgba(#fff, 0.5)

.armor-blrrtstrap .button--state--warning
  background-color #f30
  &:hover:not(:disabled):not(.disabled)
    background-color darken(@background-color, 50%)
