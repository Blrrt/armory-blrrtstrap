.armor-blrrtstrap .button
  background-color #666
  color #fff
  cursor pointer
  display inline-block
  font-size 1.6rem
  line-height 2.5rem
  min-width 3.5rem
  padding 0.6rem 1.5rem 0.4rem
  position relative
  text-align center
  transition background-color 0.2s, border-color 0.2s, color 0.2s, opacity 0.2s
  z-index 1
  &:hover:not(:disabled):not(.disabled)
    background-color darken(@background-color, 20%)
  &.disabled
  &:disabled
    cursor default
    opacity 0.6

for size in (x-small 1.3rem 1.5rem) (small 1.4rem 2rem) (large 1.6rem 3.0rem)
  .armor-blrrtstrap .button--size--{size[0]}
    font-size size[1]
    line-height size[2]

.button--size--large
  -webkit-font-smoothing antialiased

.armor-blrrtstrap .button__icon
  display inline
  position relative
  right 0.5rem

.armor-blrrtstrap .button__text
  display inline

.armor-blrrtstrap .button--state--warning
  background-color #f30
  &:hover:not(:disabled):not(.disabled)
    background-color darken(@background-color, 20%)
