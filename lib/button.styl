.armor-blrrtstrap .button
.armor-blrrtstrap-button
  background-color rgba(#000, .6)
  color #fff
  cursor pointer
  display inline-block
  font-size 1.6rem
  line-height 2.5rem
  min-width 3.5rem
  padding .6rem 1.166666666666667rem .4rem
  position relative
  text-align center
  transition all .2s
  z-index 1
  &:hover
    background-color rgba(#000, .8)
  &:disabled
    cursor default
    color rgba(@color, .5)
    &:hover
      background-color rgba(#000, .6)

for size in (x-small 1.3rem 2.5rem) (small 1.4rem 3rem) (medium 1.6rem 3.5rem) (large 1.8rem 4rem) (x-large 2.1rem 5rem)
  .armor-blrrtstrap .button-size-{size}
  .armor-blrrtstrap-button-size-{size}
    font-size size[1]
    line-height size[2] - 1rem
    min-width size[2]
    padding-bottom .4rem unless (size[2] % 1 == 0)
    padding-left (size[2] / 3)
    padding-right (size[2] / 3)
    padding-top .6rem unless (size[2] % 1 == 0)
