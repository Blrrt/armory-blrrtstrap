.armor-blrrtstrap .navbar
  background-color #fff
  box-shadow 0 1px 2px rgba(#000, 0.25)
  display flex
  height 4rem
  line-height 0
  position relative
  transform translate3d(0, 0, 0)
  transition transform 0.2s
  width 100%
  z-index 220

.armor-blrrtstrap .navbar--fixed::before
  background-color #fff
  bottom 4rem
  content ''
  display block
  left 0
  position fixed
  right 0
  top -20rem

.armor-blrrtstrap .navbar--under--ios-status-bar
  height 6rem
  padding-top 2rem

.armor-blrrtstrap .navbar__section
  align-items center
  display flex
  flex-basis 0%
  flex-grow 1
  flex-shrink 1

.armor-blrrtstrap .navbar__section__inner
  display block

.armor-blrrtstrap .navbar__section--align--center
  align-self center
  flex-basis (8/12 * 100%)
  justify-content center

.armor-blrrtstrap .navbar__section--align--right
  justify-content flex-end

.armor-blrrtstrap .navbar__title
  color #999
  display block
  font-size 1.8rem
  line-height 4rem
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
