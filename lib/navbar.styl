.armor-blrrtstrap .navbar
  background-color #fff
  box-shadow 0 1px 2px rgba(#000, .15)
  display flex
  height 4rem
  line-height 0
  position relative
  transform translate3d(0, 0, 0)
  transition transform 0.2s
  width 100%
  z-index 30

.armor-blrrtstrap .navbar--fixed
  position fixed

.armor-blrrtstrap .cordova--yes.os--name--ios .navbar--fixed
  top 2rem

.armor-blrrtstrap .navbar--unpinned
  transform translate3d(0, -4rem, 0)

.armor-blrrtstrap .cordova--yes.os--name--ios .navbar--unpinned
  transform translate3d(0, -6rem, 0)

.armor-blrrtstrap .navbar__section
  display flex

.armor-blrrtstrap .navbar__section--align--center
.armor-blrrtstrap .navbar__section--align--left
.armor-blrrtstrap .navbar__section--align--right
  flex 0 0 (2/12 * 100%)

.armor-blrrtstrap .navbar__section--align--center
  align-self center
  flex-basis (8/12 * 100%)
  justify-content center

.armor-blrrtstrap .navbar__section--align--right
  align-self flex-end
  justify-content flex-end

.armor-blrrtstrap .navbar__title
  color #999
  display block
  font-size 1.8rem
  line-height 4rem
  overflow hidden
  text-overflow ellipsis
  white-space nowrap
