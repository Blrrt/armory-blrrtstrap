@import 'nib'

.armor-blrrtstrap .navbar
.armor-blrrtstrap-navbar
  background-color #fff
  box-shadow 0 1px 2px rgba(#000, .15)
  clearfix();
  display flex
  height 4rem
  line-height 0
  padding-left 1rem
  padding-right 1rem
  position relative
  width 100%
  z-index 30
  @media (min-width: 62em)
    padding-left 2rem
    padding-right 2rem

.armor-blrrtstrap .navbar-sticky
.armor-blrrtstrap-navbar-sticky
  position fixed
  & + :not(.navbar-sticky)
    padding-top 4rem

.armor-blrrtstrap .navbar-items
.armor-blrrtstrap-navbar-items
  display flex
  align-items center
  align-self center
  flex-grow 1
  height inherit
  justify-content center
  margin-right -1rem
  min-width 1rem
  width 0
  &:last-child
    align-self flex-end
    justify-content flex-end
  &:first-child
    align-self flex-start
    justify-content flex-start

.armor-blrrtstrap .navbar-item
.armor-blrrtstrap-navbar-items
  display block
  margin-right 1rem
