.armor-blrrtstrap .tabs
  display flex

.armor-blrrtstrap .tabs__tab
  cursor pointer
  display block
  position relative

.armor-blrrtstrap .tabs__tab__body
  color #999
  display block
  min-width 5rem
  overflow hidden
  padding-left 1.5rem
  padding-right 1.5rem
  position relative
  text-align center
  transition color 0.2s
  &::after
    background-color #666
    bottom 0
    content ''
    display block
    height 0.5rem
    left 0
    position absolute
    right 0
    transform translateY(100%)
    transition transform 0.2s

.armor-blrrtstrap .tabs__tab--active .tabs__tab__body
.armor-blrrtstrap .tabs__tab:hover .tabs__tab__body
  color #666
  &::after
    transform translateY(0)

.armor-blrrtstrap .tabs__tab__body__icon
.armor-blrrtstrap .tabs__tab__body__text
  display inline-block
  line-height 4rem
  vertical-align middle

.armor-blrrtstrap .tabs__tab__body__icon
  font-size 2.4rem

.armor-blrrtstrap .tabs__tab__body__text
  font-size 1.8rem

.armor-blrrtstrap .tabs__tab__body__icon + .tabs__tab__body__text
  margin-left 0.5rem

.armor-blrrtstrap .tabs__tab__badge
  display block
  position absolute
  right calc(100% - 1rem)
  top 0.25rem
