.armor-blrrtstrap .tabs
  display flex

.armor-blrrtstrap .tabs__tab
  color #999
  cursor pointer
  display block
  min-width 5rem
  padding-left 1.5rem
  padding-right 1.5rem
  overflow hidden
  position relative
  text-align center
  transition color 0.2s
  &::after
    background-color #666
    bottom 0
    content ''
    display block
    height 0.5rem
    left 0
    position absolute
    right 0
    transform translateY(100%)
    transition transform 0.2s

.armor-blrrtstrap .tabs__tab--active
.armor-blrrtstrap .tabs__tab:hover
  color #666
  &::after
    transform translateY(0)

.armor-blrrtstrap .tabs__tab__icon
.armor-blrrtstrap .tabs__tab__text
  display inline-block
  line-height 4rem
  vertical-align middle

.armor-blrrtstrap .tabs__tab__icon
  font-size 2.4rem

.armor-blrrtstrap .tabs__tab__text
  font-size 1.8rem
  margin-left 0.5rem
