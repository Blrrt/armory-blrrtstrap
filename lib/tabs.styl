.armor-blrrtstrap .tabs
  display flex
  padding-left 1rem
  padding-right 1rem
  width 100%

.armor-blrrtstrap .tabs__tab
  cursor pointer
  display block
  flex-basis 0
  flex-grow 1
  position relative

.armor-blrrtstrap .tabs__tab__body
  color #999
  display block
  min-width 5rem
  overflow hidden
  padding-left 1.5rem
  padding-right 1.5rem
  position relative
  text-align center
  transition color 0.2s
  &::after
    background-color #666
    bottom 0
    content ''
    display block
    height 0.5rem
    left 0
    position absolute
    right 0
    transform translateY(100%)
    transition transform 0.2s

.armor-blrrtstrap .tabs__tab__body--inverted
  color #ccc
  &::after
    background-color #fff

.armor-blrrtstrap .tabs__tab__body--size--small
  padding-left 1rem
  padding-right 1rem
  &::after
    height 0.25rem

.armor-blrrtstrap .tabs__tab--active
  cursor default

.armor-blrrtstrap .tabs__tab--active .tabs__tab__body
.armor-blrrtstrap .tabs__tab:hover .tabs__tab__body
  color #666
  &::after
    transform translateY(0)

.armor-blrrtstrap .tabs__tab--active .tabs__tab__body--inverted
.armor-blrrtstrap .tabs__tab:hover .tabs__tab__body--inverted
  color #fff

.armor-blrrtstrap .tabs__tab__body__content
  display inline-block
  position relative

.armor-blrrtstrap .tabs__tab__body__content__icon
.armor-blrrtstrap .tabs__tab__body__content__text
  display inline-block
  line-height 4rem
  vertical-align middle

.armor-blrrtstrap .tabs__tab__body__content__icon
  font-size 2.4rem

.armor-blrrtstrap .tabs__tab__body__content__text
  font-size 1.8rem

.armor-blrrtstrap .tabs__tab__body__content__text--size--small
  font-size 1.6rem
  line-height 3.5rem

.armor-blrrtstrap .tabs__tab__body__content__icon + .tabs__tab__body__content__text
  margin-left 0.5rem

.armor-blrrtstrap .tabs__tab__body__content__badge
  display block
  margin-right 0.25rem
  position absolute
  right 100%
  top 0.25rem
