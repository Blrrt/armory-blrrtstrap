@keyframes floating-button-container--animate-in
  0%
    transform translateY(100%)
  100%
    transform translateY(0)

.armor-blrrtstrap .floating-button-container
  bottom 0
  display block
  left 0
  position fixed
  right 0
  z-index 30

.armor-blrrtstrap .floating-button-container--animate-in
.armor-blrrtstrap .floating-button-container--animate-out
  animation-duration 0.4s
  animation-fill-mode both
  animation-name floating-button-container--animate-in

.armor-blrrtstrap .floating-button-container--animate-out
  animation-direction reverse

.armor-blrrtstrap .floating-button
  background-color rgba(#000, 0.65)
  color #fff
  display flex
  min-height 4.5rem
  position relative
  &::after
    border-color transparent
    border-style dashed
    border-width 0.2rem
    bottom 0
    content ''
    display block
    left 0
    pointer-events none
    position absolute
    right 0
    top 0
    transition border-color 0.2s

.armor-blrrtstrap .floating-button--dropzone--dragover
  background-color rgba(#000, 0.8)

.armor-blrrtstrap .floating-button--dropzone--dragging::after
.armor-blrrtstrap .floating-button--dropzone--dragover::after
  border-color #fff

.armor-blrrtstrap .floating-button__button
  cursor pointer
  display block
  font-size 1.6rem
  line-height 3.5rem
  padding 0.6rem 1.5rem 0.4rem
  text-align center
  transition background-color 0.2s, border-color 0.2s, color 0.2s, opacity 0.2s
  &:last-child
    text-align right
  &:first-child
    text-align left
  &:hover
    background-color rgba(#000, 0.5)

.armor-blrrtstrap .floating-button__button--disabled
  cursor default
  opacity 0.6
  &:hover
    background-color transparent

.armor-blrrtstrap .floating-button__button--primary
  flex-grow 1

.armor-blrrtstrap .floating-button__button__text
  display inline

.armor-blrrtstrap .floating-button__button__text--muted
  color rgba(#fff, 0.5)
