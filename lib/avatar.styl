size(n)
  border-radius n * 0.5rem
  width n * 1rem
  height n * 1rem

.armor-blrrtstrap .avatar
  display inline-block
  overflow hidden
  size 4
  transform scale(1)
  transition opacity 0.2s, filter 0.3s
  vertical-align middle

.armor-blrrtstrap .avatar--size--small
  size 3

.armor-blrrtstrap .avatar__image
  display inline-block
  height 100%
  position relative
  transform-origin top left
  width 100%

.armor-blrrtstrap .avatar--loading
  filter grayscale(0) saturate(0)
  opacity 0

.armor-blrrtstrap .avatar__image--default
  visibility hidden
