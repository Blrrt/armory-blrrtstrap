size(n)
  border-radius n * 0.5rem
  width n * 1rem
  height n * 1rem

.armor-blrrtstrap .avatar
  display inline-block
  size 4
  transition-duration 0.2s
  transition-property opacity
  vertical-align middle

.armor-blrrtstrap .avatar--loading
  opacity 0

.armor-blrrtstrap .avatar--size--small
  size 3
