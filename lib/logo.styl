.armor-blrrtstrap .logo
  background-repeat no-repeat
  background-size contain
  color transparent
  display inline-block
  filter drop-shadow(0 0.3rem 0.3rem rgba(#000, 0.5))
  font-size 0
  transition -webkit-filter 0.2s, filter 0.2s

.armor-blrrtstrap .logo--clickable:hover
  cursor pointer
  filter drop-shadow(0 0.3rem 0.3rem rgba(#000, 1))
