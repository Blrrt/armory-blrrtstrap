.armor-blrrtstrap .checkbox
  color #999
  display flex
  font-size 1.4rem
  padding-bottom 0.25rem
  padding-top 0.25rem
  position relative

.armor-blrrtstrap .checkbox__input
  bottom 0
  display block
  left 0
  opacity 0
  position absolute
  right 0
  top 0

.armor-blrrtstrap .checkbox__button
.armor-blrrtstrap .checkbox__text
  cursor pointer

.armor-blrrtstrap .checkbox__button
  display inline-block
  position relative
  height 2rem
  width 1.3rem

.armor-blrrtstrap .checkbox__button__checked
.armor-blrrtstrap .checkbox__button__empty
  display block
  left 0
  line-height 0
  position absolute
  text-align center
  top 0.3rem
  width 100%

.armor-blrrtstrap .checkbox__button__checked
  opacity 0
  left 0.1rem

.armor-blrrtstrap .checkbox__text
  display inline-block
  flex-basis 0
  flex-grow 1
  line-height 2rem
  margin-left 0.4rem

.armor-blrrtstrap .checkbox__input:checked ~ .checkbox__button
  color #00aeff

.armor-blrrtstrap .checkbox__input:checked ~ .checkbox__button .checkbox__button__empty
  opacity 0

.armor-blrrtstrap .checkbox__input:checked ~ .checkbox__button .checkbox__button__checked
  opacity 1

.armor-blrrtstrap .checkbox__input:disabled ~ .checkbox__button
.armor-blrrtstrap .checkbox__input:disabled ~ .checkbox__text
  cursor default

.armor-blrrtstrap .checkbox__input:disabled ~ .checkbox__button
  opacity 0.5
