.armor-blrrtstrap .icon-button
  color #666
  cursor pointer
  display inline-block
  font-size 2.8rem
  min-width 4rem
  padding 0.6rem 0.5rem
  transition color 0.2s
  &:hover
    color #333

for size in (x-small 1.1rem 2.5rem) (small 1.4rem 3rem) (medium 2.1rem 3.5rem) (large 2.8rem 4rem) (x-large 2.1rem 5rem)
  .armor-blrrtstrap .icon-button-size-{size}
    font-size size[1]
    min-width size[2]
