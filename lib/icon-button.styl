.armor-blrrtstrap .icon-button
  color #666
  cursor pointer
  display inline-block
  font-size 2.8rem
  min-width 4rem
  padding 0.6rem 0.5rem
  position relative
  transition color 0.2s
  &:hover
    color #333

.armor-blrrtstrap .icon-button__badge
  display block
  left calc(100% - 1rem)
  position absolute
  top 0.25rem
