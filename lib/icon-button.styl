.armor-blrrtstrap .icon-button
  color #666
  display inline-block
  font-size 2.4rem
  line-height 2.8rem
  min-width 4rem
  opacity 1
  padding 0.6rem 0.5rem
  position relative
  transition color 0.2s, opacity 0.2s
  &:not(:disabled)
    cursor pointer
  &:hover:not(:disabled)
    color #333
  &:disabled
    color #ccc

.armor-blrrtstrap .icon-button__icon-button
  display block
  left calc(100% - 1rem)
  position absolute
  top 0.25rem

.armor-blrrtstrap .icon-button--animate-in
  opacity 1

.armor-blrrtstrap .icon-button--animate-out
  opacity 0
