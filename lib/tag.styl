.tag
  background-color #00aeff
  cursor pointer
  display inline-block
  padding-left 0.5rem
  padding-right 0.5rem
  transition background-color 0.2s, opacity 0.2s

.tag:hover
.tag--focused
  background-color darken(#00aeff, 10)

.tag--callout
  background-color #00b259

.tag--callout:hover
.tag--callout.tag--focused
  background-color darken(#00b259, 10)

.tag--disabled
.tag--disabled:hover
  cursor default
  opacity 0.5

.tag__text
.tag__icon
  color #fff
  font-size 1.4rem
  display inline-block
  line-height 2.5rem

.tag__text
  padding-left 0.5rem
  padding-right 0.5rem
  text-rendering optimizeLegibility
