.armor-blrrtstrap .heading
.armor-blrrtstrap-heading
  color #666
  display block
  font-size 2.4rem
  font-weight 400
  line-height 3rem

.armor-blrrtstrap .heading-comment
.armor-blrrtstrap-heading-comment
  display inline
  &::before
    content '('
  &::after
    content ')'

.armor-blrrtstrap .heading-inverted
.armor-blrrtstrap-heading-inverted
  color #fff

for size in (x-small 1.6rem 2rem) (small 2rem 2.5rem) (medium 2.4rem 3rem) (large 3.6rem 4rem) (x-large 4.8rem 5rem)
  .armor-blrrtstrap .heading-size-{size[0]}
  .armor-blrrtstrap-heading-size-{size[0]}
    font-size size[1]
    line-height size[2]
