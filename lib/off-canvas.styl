.armor-blrrtstrap .off-canvas
  display flex
  flex 1
  flex-direction column
  // overflow-x hidden /* swap with off-canvas in wkwebview */
  width 100% /* enable with wkwebivew */

.armor-blrrtstrap .off-canvas__background
  bottom 0
  display block
  left 0
  pointer-events none
  position absolute
  right 0
  top 0
  z-index 205

.armor-blrrtstrap .off-canvas__background--show
  pointer-events auto

.armor-blrrtstrap .off-canvas__content
  display flex
  flex 1
  flex-direction row
  position relative
  z-index 200

.armor-blrrtstrap .off-canvas__column
  background-color #fff
  bottom 0
  display block
  max-width 30rem
  position absolute
  top 0
  transition-property transform
  transition-duration 0.15s
  width 85%
  z-index 210

.armor-blrrtstrap .off-canvas__column--fixed
  position fixed

.armor-blrrtstrap .cordova--yes.os--name--ios .off-canvas__column--fixed
  top 2rem

.armor-blrrtstrap .off-canvas__column--direction--left
  left 0

.armor-blrrtstrap .off-canvas__column--direction--left.off-canvas__column--closed
  transform translateX(-100%)

.armor-blrrtstrap .off-canvas__column--direction--right
  right 0

.armor-blrrtstrap .off-canvas__column--direction--right.off-canvas__column--closed
  transform translateX(100%)
