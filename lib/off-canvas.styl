.armor-blrrtstrap .off-canvas
.armor-blrrtstrap-off-canvas
  display flex
  flex 1
  flex-direction column
  position relative

.armor-blrrtstrap .off-canvas-open
.armor-blrrtstrap-off-canvas-open
  overflow-x hidden

.armor-blrrtstrap .off-canvas-view
.armor-blrrtstrap-off-canvas-view
  display flex
  flex 1
  position relative
  transition all .2s
  width 100%
  z-index 200
  &.close
    box-shadow -2px 1px 2px rgba(#000, .15)
  &.close.left
    left -6rem
    transform translateX(100%)
  &.close.right
    right -6rem
    transform translateX(-100%)

.armor-blrrtstrap .off-canvas-column
.armor-blrrtstrap-off-canvas-column
  background-color #fff
  bottom 0
  display none
  padding 1rem
  position absolute
  top 0
  transition all .2s
  z-index 100
  &.open
    display block
  &.left
    left 0
    right 6rem
  &.right
    left 6rem
    right 0
