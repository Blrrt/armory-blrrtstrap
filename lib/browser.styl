.armor-blrrtstrap .browser
  display inline-block
  padding 1rem
  text-align center
  transition background-color 0.2s
  width 100%

.armor-blrrtstrap .browser--clickable:hover
  background-color rgba(#000, 0.1)
  cursor pointer

.armor-blrrtstrap .browser__logo
  display block
  margin 2rem auto 1rem auto
  padding-bottom 50%
  width 50%

.armor-blrrtstrap .browser__name
  color #666
  display block
  font-size 2.4rem
  font-weight 400
  line-height 3rem
  margin 1rem auto
