.armor-blrrtstrap .background
.armor-blrrtstrap-background
  background-position center
  background-size cover
  bottom 0
  display block
  left 0
  position fixed
  right 0
  top 0

.armor-blrrtstrap .background-button
.armor-blrrtstrap-background-button
  bottom 1.5rem
  color rgba(#000, 0.7)
  cursor pointer
  display inline-block
  font-size 2.4rem
  left 1.5rem
  line-height 3rem
  position absolute
  text-align center
  transition all 0.2s
  width 3rem
  z-index 300
  &:hover
    color rgba(#000, 0.85)
  @media (max-width: 48em)
    display none
